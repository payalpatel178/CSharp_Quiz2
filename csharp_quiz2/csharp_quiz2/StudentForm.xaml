<Window x:Class="csharp_quiz2.StudentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharp_quiz2"
        mc:Ignorable="d"
        Title="Student Form" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <TextBox x:Name="txtBox" Height="25" Width="100" Margin="10"></TextBox>
            <Button x:Name="btnAddStudent" Width="80" Click="btnAddStudent_Click">Add Student</Button>
        </StackPanel>
        <ListBox Name="lbStudents" DisplayMemberPath="Name"></ListBox>
    </DockPanel>
</Window>
