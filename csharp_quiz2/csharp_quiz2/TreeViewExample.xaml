<Window x:Class="csharp_quiz2.TreeViewExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharp_quiz2"
        mc:Ignorable="d"
        Title="TreeView Example" Height="350" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Button x:Name="btnClick" Content="Click To Add" Click="btnClick_Click" Height="25" Width="100" Margin="5"></Button>
            <TreeView x:Name="treeView">
                <TreeViewItem Header="Odd">
                    <TreeViewItem x:Name="tvOdd"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Even">
                    <TreeViewItem x:Name="tvEven"></TreeViewItem>
                </TreeViewItem>
            </TreeView>
        </StackPanel>
    </Grid>
</Window>
